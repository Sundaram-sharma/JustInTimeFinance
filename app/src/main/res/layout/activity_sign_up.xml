<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".signUp">


    <LinearLayout
        android:id="@+id/linearLayoutSignUp1"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:orientation="vertical"
        android:background="@drawable/layout_gradient_01">

        <TextView
            android:id="@+id/signUpText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:text="Sign Up"
            android:textSize="32dp"
            />

        <TextView
            android:id="@+id/accountNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="Account Number"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/inputAccountNumberSignup"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_bg"
            android:drawableLeft="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="Name"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/inputNameSignup"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_bg"
            android:drawableLeft="@android:drawable/ic_menu_myplaces"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="Email"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/inputPasswordSignup"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_bg"
            android:drawableLeft="@android:drawable/sym_action_email"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/passwordTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="20sp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"/>

        <EditText
            android:id="@+id/inputConfirmPasswordSignup"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_bg"
            android:drawableLeft="@android:drawable/ic_secure"
            android:drawablePadding="15dp"
            android:drawableTint="#ACACAC"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutSignUp2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayoutSignUp1"
        android:orientation="vertical">

        <Button
            android:id="@+id/signUpButtonWorking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/button_gradient"
            android:gravity="center_horizontal"
            android:text="Sign up"
            android:textSize="20sp" />

        <Button
            android:id="@+id/loginButtonTransfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/button_gradient"
            android:gravity="center_horizontal"
            android:text="Existing User ?"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>