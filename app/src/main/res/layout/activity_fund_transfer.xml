<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActions.Transactions">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="760dp"
        android:background="@drawable/layout_gradient_background">


        <RelativeLayout
            android:id="@+id/relativeLayoutTransaction1"
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/swipeCardRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="240dp"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/cardLayoutAccount"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/layout_white_background"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutHorizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/cardLayoutAccount"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageButton
                        android:id="@+id/imageButtonNEFT"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner"
                        android:scaleType="fitXY"
                        android:src="@drawable/neft"
                        tools:ignore="SpeakableTextPresentCheck"
                        />

                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="70dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="NEFT"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/imageButtonRTGS"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner"
                        android:scaleType="fitXY"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:src="@drawable/rtgs" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="75dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="RTGS"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/imageButtonIMPS"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner"
                        android:scaleType="fitXY"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:src="@drawable/imps"/>

                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="75dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="IMPS"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/sendMoneyTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutHorizontal"
                android:text="Send money to"
                android:textColor="@color/white"

                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/layoutHorizontal2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/sendMoneyTo"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_marginStart="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp">

                    <ImageButton
                        android:id="@+id/imageButtonSendMoney"
                        android:layout_width="80dp"
                        android:layout_height="61dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner"
                        android:scaleType="fitXY"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:src="@android:drawable/stat_sys_upload" />

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:gravity="center"
                        android:text="New"
                        android:textColor="@color/white" />
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1" />

            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/linearLayoutTransaction3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayoutTransaction1"
            android:background="@drawable/layout_gradient_02"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/transactionRecycler"
                android:layout_marginStart="35dp"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="50dp"/>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>